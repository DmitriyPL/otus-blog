mixin carousel(urlList)
    .carousel-pl
        .carousel-pl__inner    
            a.carousel-pl__control-prev(role='button')
                span.carousel-pl__control-prev-icon Previous
            each url, index in urlList
                if index == 0
                    .carousel-pl__item.carousel-pl__active
                        img(src=url alt=`${index+1} slide`)
                else
                    .carousel-pl__item
                        img(src=url alt=`${index+1} slide`)
            a.carousel-pl__control-next(role='button')
                span.carousel-pl__control-next-icon Next
        
